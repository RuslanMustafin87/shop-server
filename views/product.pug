extends ./templates/main.pug

block var

    - var title = 'Товар'
    - var page = 'product'
    // TODO стилизовать
block content
    main.product-page 
        .product__pictures
            img(src= image, alt="")
            //- include ../blocks/sliderProduct/sliderProduct
        h1.product__name= name
        p.product__price= price
        fieldset.product__rating.rating
            legend.rating__caption Рейтинг
            .rating__group                
                input.rating__input(type="radio" name='rating' id='rating-1' value='5' checked=rating == 5 ? 'checked' : undefined)
                label.rating__star(for='rating-1')
                input.rating__input(type="radio" name='rating' id='rating-2' value='4' checked=rating == 4 ? 'checked' : undefined)
                label.rating__star(for='rating-2')
                input.rating__input(type="radio" name='rating' id='rating-3' value='3' checked=rating == 3 ? 'checked' : undefined)
                label.rating__star(for='rating-3')
                input.rating__input(type="radio" name='rating' id='rating-4' value='2' checked=rating == 2 ? 'checked' : undefined)
                label.rating__star(for='rating-4')
                input.rating__input(type="radio" name='rating' id='rating-5' value='1' checked=rating == 1 ? 'checked' : undefined)
                label.rating__star(for='rating-5')
        button.product__button-rating Оценить
        button.product__button-add Добавить в корзину    
        